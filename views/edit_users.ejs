

    <%- include('partials/header') %>.


  
    <div class="container">
        
    <div class="row ">
        <div class="col-lg-6">
      <h3>Edit <%= user.name %></h3>
      <form class="form-horizontal" action="/update/<%= user._id %>" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" placeholder="Enter Full Name">
            </div>
          </div>
        <div class="form-group">
   
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email"  value="<%= user.email %>" placeholder="Enter Email">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <input type="text" class="form-control" id="mobile" name="phone" value="<%= user.phone %>" placeholder="Enter Mobile">
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
              <input type="file" class="form-control" id="file"  name="image" >
              <img src="/<%= user.image %>" width="100" class="img-thumbnail">
            </div>
            <input type="hidden" class="form-control" id="file"  name="old_image" value="<%= user.image %>" >


          </div>
       
        <div class="form-group">
          <div class="col-sm-10">
            <button type="submit"  name="submit"class="btn btn-success btn-block">Update User</button>
          </div>
        </div>
      </form>





    </div>

    <div class="col-lg-6"> <h3>Add Here</h3></div>

    </div>

    </div>
    
    <%- include('partials/footer') %>.