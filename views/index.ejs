

    <%- include('partials/header') %>.


  
<div class="container">
  <h3>Users Records </h3>
  <div class="row">

    <div class="col-lg-12">

      <% if(message) { %>

        <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close" ></button>

          <strong><%= message.message %></strong>
        </div>

        <% } %>
        <br>

        <% if (users != '')  {%>
          <table class="table">


            <thead >
              <tr>
                <th scope="col">#Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Image</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((row,index) => { %>

                <tr>
                  <th scope="row"><%= index %></th>
                  <td><%= row.name %></td>
                  <td><%= row.email %></td>
                  <td><%= row.phone %></td>
                  <td><img src="<%=row.image %>" width="52" height="52" class="img-fluid"></td>
                  <td><a href="/edit/<%=row._id %>"><i class="fa fa-pencil-square-o text-success"></i> </a></td>
                  <td><a href="/delete/<%=row._id %>"><i class="fa fa-trash text-danger"></i></a></td>
                </tr>

                <%  }) %>
           
       
            </tbody>
          </table>

          <% } else { %>

            <h1 class="text-center text-secondary mt-5"> Users not found in the database</h1>

            <% }%>





      




    </div>




  </div>
  


</div>

<%- include('partials/footer') %>.